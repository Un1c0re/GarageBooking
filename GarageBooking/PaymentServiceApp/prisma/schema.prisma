generator client {
  provider        = "prisma-client"
  previewFeatures = ["multiSchema"]
  output          = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["payment"]
}

model Payment {
  id        String   @id
  orderId   String
  userId    String
  amount    Float
  status    String
  createdAt DateTime @default(now())

  @@schema("payment")
}
