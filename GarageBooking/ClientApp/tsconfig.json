{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./dist/*"
      ]
    },
    "types": ["element-plus/global", "vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/**/*.vue",
    "tests/*.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "eslint.config.js", "tailwind.config.js"]
}
